<%= simple_form_for(@blog, **bootstrap_form_options(form_class: 'form-horizontal')) do |f| %>
  <%= f.error_notification class: 'alert alert-danger' %>
  <div class="alert alert-danger">
    <% @blog.errors[:base].each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </div>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :subdomain %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
