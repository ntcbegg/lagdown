<%= dl_for @blog, :name, :subdomain %>
<%= link_to t('crud.new!', resource: Post.model_name.human), new_settings_blog_post_path(@blog) %> |
<%= link_to t('crud.edit'), [:edit, @blog] %> |
<%= link_to t('action.back'), Settings::Blog %>

<%= paginate @posts %>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= Post.human_attribute_name(:name) %></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post_url(post, subdomain: @blog.subdomain) %></td>
        <td><%= link_to t('crud.edit'), [:edit, @blog, post] %></td>
        <td><%= link_to t('crud.delete'), [@blog, post], method: :delete, data: {confirm: t('message.are_you_sure')} %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @posts %>