<div class="page-header">
  <h1><%= @blog.name %></h1>
</div>
<% @posts.each do |post| %>
  <div class="page-header">
    <h2><%= post.title %></h2>
  </div>
  <div class="highlight">
    <%= sanitize RDiscount.new(post.content, :no_superscript).to_html %>
  </div>
<% end %>

<%= mathjax_script_tag %>