<%= simple_form_for(@admin_user, bootstrap_form_options(form_class: 'form-horizontal')) do |f| %>
  <%= f.error_notification class: 'alert alert-danger' %>

  <div class="form-inputs">
    <%= f.input :email %>
    <%= f.input :password, hint: t('.leave_blank') %>
    <%= f.input :nickname %>
    <%= f.input :about %>
    <%= f.input :homepage, as: :url %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-lg btn-primary' %>
  </div>
<% end %>
